{
  "name": "fresh-root",
  "private": true,
  "packageManager": "pnpm@9.1.0",
  "engines": {
    "node": ">=20.10.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [],
      "allowedVersions": {
        "firebase": "12"
      }
    }
  },
  "workspaces": [
    "apps/*",
    "functions",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "lint": "eslint \"apps/**/src/**/*.{ts,tsx,js,jsx}\" \"apps/**/app/**/*.{ts,tsx,js,jsx}\" \"packages/**/src/**/*.{ts,tsx,js,jsx}\" \"functions/src/**/*.{ts,tsx,js,jsx}\" --max-warnings 200",
    "format": "pnpm -w prettier --write .",
    "typecheck": "tsc --build",
    "build": "pnpm -r --filter @apps/web... run build && pnpm -r --filter @packages/* run build && pnpm --filter functions run build",
    "emu": "firebase emulators:start --import ./.emulator-data --export-on-exit",
    "emu:firestore": "firebase emulators:start --only firestore",
    "api:dev": "pnpm --filter @fresh-schedules/api dev",
    "api:test": "pnpm --filter @fresh-schedules/api test",
    "api:build": "pnpm --filter @fresh-schedules/api build",
    "api:docker:build": "docker build -t fresh-schedules-api:latest services/api",
    "api:docker:run": "docker run --rm -p 4000:4000 -e FIREBASE_PROJECT_ID=demo-fresh fresh-schedules-api:latest",
    "test": "vitest run --passWithNoTests",
  "test:rules": "vitest run --globals --dir tests/rules --reporter=dot",
    "ci": "pnpm -w install --frozen-lockfile && pnpm -w typecheck && pnpm -w lint && pnpm -w build && pnpm -w test && pnpm -w test:rules"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "firebase": "^12.0.0",
    "@firebase/rules-unit-testing": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.38.0",
    "eslint-config-next": "^16.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "firebase-tools": "^14.0.0",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "playwright": "^1.56.1",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  }
}
