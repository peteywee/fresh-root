{
  "name": "fresh-root",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "postinstall": "husky || echo \"[postinstall] husky skipped\"",
    "dev": "pnpm --filter @apps/web dev",
    "dev:web": "pnpm --filter @apps/web dev",
    "dev:api": "pnpm --filter @services/api dev",
    "dev:emulators": "pnpm --filter functions emulators",
    "dev:rules": "pnpm --filter @rules/firestore dev",
    "lint": "eslint \"apps/**/src/**/*.{ts,tsx,js,jsx}\" \"apps/**/app/**/*.{ts,tsx,js,jsx}\" \"apps/**/vitest.setup.ts\" \"packages/**/src/**/*.{ts,tsx,js,jsx}\" \"functions/src/**/*.{ts,tsx,js,jsx}\" \"services/api/src/**/*.{ts,tsx,js,jsx}\" --max-warnings 200",
    "lint:fix": "eslint \"apps/**/src/**/*.{ts,tsx,js,jsx}\" \"apps/**/app/**/*.{ts,tsx,js,jsx}\" \"apps/**/vitest.setup.ts\" \"packages/**/src/**/*.{ts,tsx,js,jsx}\" \"functions/src/**/*.{ts,tsx,js,jsx}\" \"services/api/src/**/*.{ts,tsx,js,jsx}\" --fix --max-warnings 200",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm -r --filter @apps/web... run typecheck",
    "test": "vitest run --passWithNoTests",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "build": "pnpm -r --filter @apps/web... run build && pnpm -r --filter @packages/* run build && pnpm --filter functions run build",
    "build:web": "pnpm --filter @apps/web build",
    "build:types": "pnpm --filter @fresh-schedules/types build",
    "build:functions": "pnpm --filter functions build",
    "clean": "rimraf node_modules .turbo .next dist functions/lib apps/web/.next apps/web/dist packages/types/dist services/api/dist",
    "prepare": "husky",
    "ci": "pnpm lint && pnpm typecheck && pnpm test && pnpm build",
    "ci:lint": "pnpm lint",
    "ci:typecheck": "pnpm typecheck",
    "ci:test": "pnpm test",
    "ci:build": "pnpm build",
    "ci:doc-parity": "node scripts/ci/check-doc-parity.mjs",
    "ci:verify-tests-present": "node scripts/tests/verify-tests-present.mjs",
    "schema:catalog": "tsx scripts/gen_schema_catalog.ts",
    "rules:lint": "pnpm --filter @rules/firestore lint",
    "rules:test": "pnpm --filter @rules/firestore test",
    "rules:build": "pnpm --filter @rules/firestore build",
    "functions:lint": "pnpm --filter functions lint",
    "functions:test": "pnpm --filter functions test",
    "functions:build": "pnpm --filter functions build",
    "functions:emulators": "pnpm --filter functions emulators",
    "api:dev": "pnpm --filter @services/api dev",
    "api:test": "pnpm --filter @services/api test",
    "api:lint": "pnpm --filter @services/api lint",
    "api:build": "pnpm --filter @services/api build",
    "index:docs": "tsx scripts/index_docs.ts",
    "index:repo": "tsx scripts/index_repo.ts",
    "docs:open": "xdg-open docs/DOCS_INDEX.md || open docs/DOCS_INDEX.md || echo \"Open docs/DOCS_INDEX.md manually\"",
    "docs:ai-context": "xdg-open docs/ai/CHAT_CONTEXT.md || open docs/ai/CHAT_CONTEXT.md || echo \"Open docs/ai/CHAT_CONTEXT.md manually\""
  },
  "engines": {
    "node": ">=20.10.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.12.1",
  "devDependencies": {
    "@types/node": "^24.9.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitest/ui": "^4.0.6",
    "dotenv": "^16.4.5",
    "eslint": "^9.38.0",
    "eslint-config-next": "^16.0.1",
    "globby": "^16.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vitest": "^4.0.6"
  },
  "dependencies": {
    "@fresh-schedules/types": "0.1.0",
    "@lucide/react": "^0.460.0",
    "@tanstack/react-query": "^5.59.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.0",
    "next": "^16.0.1",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.4.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "pnpm": {
    "overrides": {
      "@fresh-schedules/types": "link:packages/types",
      "@lucide/react": "npm:lucide-react@latest",
      "@iac-fresh/eslint-config": "npm:eslint-config-next@latest",
      "@iac-fresh/prettier-config": "npm:prettier@latest"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "firebaseui>firebase": "12.x"
      }
    }
  }
}
