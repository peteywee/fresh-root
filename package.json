{
  "name": "fresh-root",
  "private": true,
  "packageManager": "pnpm@9.1.0",
  "engines": {
    "node": ">=20.10.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [],
      "allowedVersions": {
        "firebase": "12"
      }
    }
  },
  "workspaces": [
    "apps/*",
    "functions",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "prepare": "husky install || true",
    "lint": "pnpm -w eslint .",
    "format": "pnpm -w prettier --write .",
    "typecheck": "tsc --build",
    "build": "pnpm -r --filter @apps/web... run build && pnpm -r --filter @packages/* run build && pnpm --filter functions run build",
    "build:agent": "tsc -p scripts/agent/tsconfig.json",
    "run:agent": "node --enable-source-maps ./dist/agent/agent.mjs",
    "emu": "firebase emulators:start --import ./.emulator-data --export-on-exit",
    "test": "vitest run --passWithNoTests",
    "test:rules": "pnpm --filter @fresh-root/rules-tests test",
    "ci": "pnpm -w install --frozen-lockfile && pnpm -w typecheck && pnpm -w lint && pnpm -w build && pnpm -w test && pnpm -w test:rules"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.38.0",
    "eslint-config-next": "^16.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "execa": "^9.4.0",
    "firebase-tools": "^14.0.0",
    "husky": "^9.0.0",
    "jest": "^29.7.0",
    "p-retry": "^6.2.0",
    "playwright": "^1.56.1",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3"
  }
}
