{
  "name": "@fresh-schedules/repomix",
  "version": "0.1.0",
  "description": "Repomix CLI and library integration for Fresh Schedules",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli.js",
      "types": "./dist/cli.d.ts"
    }
  },
  "bin": {
    "repomix": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "repomix": "^0.2.43"
  },
  "devDependencies": {
    "@types/node": "^24.10.4",
    "tsup": "8.5.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.10.0"
  }
}
