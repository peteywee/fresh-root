{
  "name": "@fresh-schedules/api-framework",
  "version": "1.0.0",
  "description": "Internal SDK for building secure, consistent API routes",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.mts"
    },
    "./testing": {
      "import": "./dist/testing.mjs",
      "require": "./dist/testing.js",
      "types": "./dist/testing.d.mts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --cache --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --cache --ext .ts,.tsx,.js,.jsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@fresh-schedules/types": "workspace:*",
    "zod": "^4.1.13"
  },
  "peerDependencies": {
    "firebase-admin": "^12.0.0",
    "next": "^16.0.5"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.6.3",
    "vitest": "^4.0.14"
  },
  "files": [
    "dist",
    "README.md",
    "eslint.config.js"
  ]
}
