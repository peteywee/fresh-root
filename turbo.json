{
  "$schema": "https://turbo.build/schema.json",
  "x_note": "This turbo.json uses the `tasks` syntax (Turbo v2+). If you run into `pipeline` vs `tasks` errors, upgrade Turbo to v2+ or adjust the config.",
  "tasks": {
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "test": {
      "outputs": ["coverage/"]
    },
    "build": {
      "dependsOn": ["^build", "typecheck"],
      "outputs": [".next/", "dist/", "build/"]
    },
    "e2e": {
      "dependsOn": ["build"],
      "outputs": [".playwright/", "test-results/"]
    }
  }
}
