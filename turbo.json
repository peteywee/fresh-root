{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "apps/web/.next/**",
        "!apps/web/.next/cache/**",
        "packages/**/dist/**",
        "functions/lib/**"
      ]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "outputs": ["eslint-report.json"],
      "cache": false
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {}
  }
}
