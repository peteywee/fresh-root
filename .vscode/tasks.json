		},
		{
			"label": "Deps: Check (no deprecated/peers)",
			"type": "shell",
			"command": "pnpm -w install --frozen-lockfile",
			"problemMatcher": [
				{
					"owner": "deps",
					"severity": "error",
					"pattern": {
						"regexp": "^(.*deprecated.*)$",
						"message": 1
					}
				},
				{
					"owner": "deps",
					"severity": "error",
					"pattern": {
						"regexp": "^(.*Issues with peer dependencies found.*)$",
						"message": 1
					}
				}
			]
		},
