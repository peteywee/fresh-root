{
  // ---------- Performance & Indexing ----------
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.next": true,
    "**/dist": true,
    "**/build": true,
    "**/coverage": true,
    "**/.turbo": true,
    "**/.firebase": true,
    "**/.pnpm-store": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/coverage/**": true,
    "**/.turbo/**": true,
    "**/.firebase/**": true,
    "**/.pnpm-store/**": true
  },
  "search.useIgnoreFiles": true,
  "search.followSymlinks": false,

  // ---------- TypeScript ----------
  "typescript.tsserver.maxTsServerMemory": 4096,
  "typescript.tsserver.watchOptions": {
    "watchFile": "useFsEventsOnParentDirectory",
    "watchDirectory": "useFsEvents"
  },
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.suggest.autoImports": true,
  "typescript.preferences.importModuleSpecifier": "shortest",

  // ---------- ESLint ----------
  "eslint.useFlatConfig": true,
  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "eslint.codeActionsOnSave.rules": null,
  "eslint.packageManager": "pnpm",
  "eslint.probe": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "eslint.runtime": "node",

  // ---------- Format & Save ----------
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "prettier.enable": true,

  // Use workspace TypeScript so module resolution matches project
  "typescript.tsdk": "node_modules/typescript/lib",

  // ---------- Markdownlint ----------
  "markdownlint.config": {
    "MD040": true,
    "MD022": true,
    "MD031": true
  },

  // ---------- Testing (Vitest) ----------
  "vitest.commandLine": "pnpm vitest -- --watch=false",
  "vitest.runAllTestsOnLaunch": false,
  "vitest.include": ["**/*.{test,spec}.{ts,tsx,js,jsx}"],
  "vitest.exclude": ["**/dist/**", "**/.next/**", "**/node_modules/**"],
  "testing.automaticallyOpenPeekView": "never",
  "testing.openTesting": "never",
  "testing.saveBeforeTest": "allEditorsInActiveGroup",

  // ---------- JS/TS Editor Quality of Life ----------
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.inlineSuggest.enabled": true,
  "editor.parameterHints.enabled": true,
  "editor.codeLens": false,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,

  // ---------- Terminal & Env ----------
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.env.linux": {
    "NODE_OPTIONS": "--max-old-space-size=4096"
  },

  // ---------- YAML/JSON (for firebase.json, rules, etc.) ----------
  "yaml.format.enable": true,
  "yaml.validate": true,
  "json.maxItemsComputed": 5000,

  // ---------- Telemetry ----------
  "telemetry.telemetryLevel": "off",

  // ---------- Workbench ----------
  "workbench.tree.indent": 14,
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "none",

  // ---------- Breadcrumbs & File Nav ----------
  "breadcrumbs.enabled": true,

  // ---------- Tailwind CSS: disable heavy code actions; keep completion only ----------
  "tailwindCSS.emmetCompletions": false,
  "tailwindCSS.hovers": true,
  "tailwindCSS.lint.cssConflict": "ignore",
  "tailwindCSS.lint.invalidScreen": "ignore",
  "tailwindCSS.lint.invalidVariant": "ignore",
  "tailwindCSS.lint.redundantVariant": "ignore",
  "tailwindCSS.includeLanguages": { "typescriptreact": "html" },
  "tailwindCSS.experimental.classRegex": [
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^'\"`]*)(?:'|\"|`)"],
    ["cva\\(([^)]*)\\)", "(?:'|\"|`)([^'\"`]*)(?:'|\"|`)"]
  ],

  // ---------- GitHub extensions: keep them idle by default ----------
  "github.prs.defaultQuery": "is:open author:@me",
  "github.gitAuthentication": true
}
