{
  // ---------- Performance & Indexing ----------
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.next": true,
    "**/dist": true,
    "**/build": true,
    "**/coverage": true,
    "**/.turbo": true,
    "**/.firebase": true,
    "**/.pnpm-store": true
  },
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/.next/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/coverage/**": true,
    "**/.turbo/**": true,
    "**/.firebase/**": true,
    "**/.pnpm-store/**": true,
    "**/.cache/**": true,
    "**/.eslintcache": true
  },
  "search.useIgnoreFiles": true,
  "search.followSymlinks": false,

  // ---------- TypeScript ----------
  "typescript.tsserver.maxTsServerMemory": 4096,
  "typescript.tsserver.watchOptions": {
    "watchFile": "useFsEventsOnParentDirectory",
    "watchDirectory": "useFsEvents"
  },
  "typescript.tsserver.log": "off",
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.suggest.autoImports": true,
  "typescript.preferences.importModuleSpecifier": "shortest",

  // ---------- ESLint ----------
  "eslint.useFlatConfig": false,
  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "eslint.codeActionsOnSave.rules": null,

  // ---------- Format & Save ----------
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "prettier.enable": true,

  // ---------- Testing (Vitest) ----------
  "vitest.commandLine": "pnpm vitest -- --watch=false",
  "vitest.runAllTestsOnLaunch": false,
  "vitest.include": ["**/*.{test,spec}.{ts,tsx,js,jsx}"],
  "vitest.exclude": ["**/dist/**", "**/.next/**", "**/node_modules/**"],
  "testing.automaticallyOpenPeekView": "never",
  "testing.openTesting": "never",
  "testing.saveBeforeTest": "allEditorsInActiveGroup",

  // ---------- JS/TS Editor Quality of Life ----------
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.inlineSuggest.enabled": true,
  "editor.parameterHints.enabled": true,
  "editor.codeLens": false,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,

  // ---------- Terminal & Env ----------
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.env.linux": {
    "NODE_OPTIONS": "--max-old-space-size=4096"
  },

  // ---------- YAML/JSON (for firebase.json, rules, etc.) ----------
  "yaml.format.enable": true,
  "yaml.validate": true,
  "json.maxItemsComputed": 5000,

  // ---------- Telemetry ----------
  "telemetry.telemetryLevel": "off",

  // ---------- Workbench ----------
  "workbench.tree.indent": 14,
  "workbench.editor.enablePreview": false,

  // ---------- Breadcrumbs & File Nav ----------
  "breadcrumbs.enabled": true
}
