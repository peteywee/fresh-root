{
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.surveys.enabled": false,
  "typescript.tsserver.maxTsServerMemory": 384,
  "typescript.tsserver.useSyntacticAnalysisOnly": true,
  "typescript.tsserver.experimental.enableProjectDiagnostics": false,
  "typescript.enableStaticTypeChecking": false,
  "typescript.suggest.autoImports": false,
  "typescript.disableAutomaticTypeAcquisition": true,
  "memory.maxMemoryMB": 768,
  "search.followSymlinks": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/.turbo": true,
    "**/dist": true,
    "**/.next": true,
    "**/coverage": true,
    "**/pnpm-lock.yaml": true,
    "archive/l3-prompts-deprecated": true,
    "**/*.prompt.md": false
  },
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "json": false
  },
  "github.copilot.advanced": {
    "debug.overrideEngine": "gpt-3.5-turbo"
  },
  "extensions.recommendations": [],
  "editor.defaultFormatter": null,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit",
    "source.formatDocument": "explicit"
  },
  "[typescript]": {
    "editor.defaultFormatter": null
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": null
  },
  "[javascript]": {
    "editor.defaultFormatter": null
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": null
  },
  "[json]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },
  "[python]": {
    "editor.defaultFormatter": null
  },
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "npm.packageManager": "pnpm",
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/**": true,
    "**/.turbo/**": true,
    "**/dist/**": true,
    "**/.next/**": true,
    "**/coverage/**": true
  },
  "extensions.ignoreRecommendations": false,
  "workbench.statusBar.feedback.visible": false,
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,
  "yaml.validate": false,
  "yaml.schemaStore.enable": false,
  "[yaml]": {
    "editor.defaultFormatter": null
  },
  "[redhat.vscode-yaml]": {
    "enable": false
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "claude.agents": {
    "enabled": true,
    "discoverable": true,
    "showAutocomplete": true
  },
  "claude.agentAutocomplete": {
    "enabled": true,
    "showSuggestions": true,
    "triggerCharacters": ["@", "/"],
    "minChars": 1,
    "debounceMs": 100
  },
  "claude.mentions": {
    "enabled": true,
    "contextAware": true,
    "inPullRequests": true,
    "inIssues": true,
    "inCodeReview": true,
    "inTextBoxes": true
  }
}
