{
  // ---------- Basic whitespace & Markdown ----------
  "editor.insertSpaces": true,
  "files.trimTrailingWhitespace": true,
  "[markdown]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "files.trimTrailingWhitespace": true
  },
  "markdownlint.run": "onSave",
  "markdownlint.ignore": [
    "**/node_modules/**",
    "**/.next/**",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**",
    "**/.turbo/**",
    "**/.firebase/**",
    "**/.pnpm-store/**",
    "**/*.mdx",
    "**/.markdownlintignore"
  ],

  // ---------- Spelling dictionary ----------
  "cSpell.words": [
    "filetag",
    "undici",
    "Vitest",
    "modelcontextprotocol",
    "domexception",
    "ghaction",
    "firebaseui",
    "pglite",
    "reviewdog",
    "Autobuild",
    "SARIF",
    "BUILDKIT",
    // Repo- and tooling-specific terms
    "peteywee",
    "mapfile",
    "codegen",
    "Dockerized",
    "ECONNREFUSED",
    "blockquotes",
    "punct",
    "Punct",
    // Firebase and authentication
    "Firestore",
    "firestore",
    "FIRESTORE",
    "firebaseio",
    "firebaseapp",
    "appspot",
    "creds",
    "Creds",
    // Security and MFA
    "TOTP",
    "totp",
    "otpauth",
    "qrcode",
    "HSTS",
    "hsts",
    "nosniff",
    "enduser",
    "INVALIDSECRET",
    // OpenTelemetry
    "OTEL",
    "otlp",
    "SEMRESATTRS",
    // Code variables and identifiers
    "sess",
    "jank",
    "FOIT",
    "FOUT",
    "crios",
    "shadcn",
    "newuser",
    "anotheruser",
    "regs",
    "allowset",
    "shid",
    "autocannon",
    "domcontentloaded"
  ],

  // ---------- Performance & Indexing ----------
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.next": true,
    "**/dist": true,
    "**/build": true,
    "**/coverage": true,
    "**/.turbo": true,
    "**/.firebase": true,
    "**/.pnpm-store": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/coverage/**": true,
    "**/.turbo/**": true,
    "**/.firebase/**": true,
    "**/.pnpm-store/**": true
  },
  "search.useIgnoreFiles": true,
  "search.followSymlinks": false,

  // ---------- TypeScript ----------
  "typescript.tsserver.maxTsServerMemory": 4096,
  "typescript.tsserver.watchOptions": {
    "watchFile": "useFsEventsOnParentDirectory",
    "watchDirectory": "useFsEvents"
  },
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.suggest.autoImports": true,
  "typescript.preferences.importModuleSpecifier": "shortest",
  "typescript.tsdk": "node_modules/typescript/lib",

  // ---------- ESLint ----------
  "eslint.useFlatConfig": true,
  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "eslint.codeActionsOnSave.rules": null,
  "eslint.probe": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "eslint.runtime": "node",

  // ---------- Format & Save ----------
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "prettier.enable": true,

  // ---------- Testing (Vitest) ----------
  "vitest.commandLine": "pnpm vitest -- --watch=false",
  "vitest.runAllTestsOnLaunch": false,
  "vitest.include": ["**/*.{test,spec}.{ts,tsx,js,jsx}"],
  "vitest.exclude": ["**/dist/**", "**/.next/**", "**/node_modules/**"],
  "testing.automaticallyOpenPeekView": "never",
  "testing.openTesting": "never",
  "testing.saveBeforeTest": "allEditorsInActiveGroup",

  // ---------- JS/TS Editor QoL ----------
  "editor.quickSuggestions": { "strings": true },
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.inlineSuggest.enabled": true,
  "editor.parameterHints.enabled": true,
  "editor.codeLens": false,
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,

  // ---------- Terminal & Env ----------
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.env.linux": {
    "NODE_OPTIONS": "--max-old-space-size=4096"
  },

  // ---------- YAML/JSON ----------
  "yaml.format.enable": true,
  "yaml.validate": true,
  "json.maxItemsComputed": 5000,

  // ---------- Telemetry ----------
  "telemetry.telemetryLevel": "off",

  // ---------- Workbench ----------
  "workbench.tree.indent": 14,
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "none",
  "breadcrumbs.enabled": true,

  // ---------- Tailwind CSS ----------
  "tailwindCSS.emmetCompletions": false,
  "tailwindCSS.hovers": true,
  "tailwindCSS.lint.cssConflict": "ignore",
  "tailwindCSS.lint.invalidScreen": "ignore",
  "tailwindCSS.lint.invalidVariant": "ignore",
  "tailwindCSS.lint.redundantVariant": "ignore",
  "tailwindCSS.includeLanguages": { "typescriptreact": "html" },
  "tailwindCSS.experimental.classRegex": [
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^'\"`]*)(?:'|\"|`)"],
    ["cva\\(([^)]*)\\)", "(?:'|\"|`)([^'\"`]*)(?:'|\"|`)"]
  ],

  // ---------- GitHub ----------
  "github.prs.defaultQuery": "is:open author:@me",
  "github.gitAuthentication": true,

  // ==========================
  // TODO Tree / TODO Highlight
  // ==========================

  // 1) Tell TODO Tree how to detect todos
  // - Matches lines that either:
  //   a) start with a checkbox: "- [ ]" or "- [x]"
  //   b) contain classic TODO/FIXME/HACK tags in comments
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^)\\s*(TODO|FIXME|HACK|NOTE|BLOCK1|BLOCK2|BLOCK3|BLOCK4|BLOCK5)|^- \\[( |x|X)\\]",

  // 2) Tags to highlight
  // - BLOCK* tags are for grouping by Plan C Block
  "todo-tree.general.tags": [
    "TODO",
    "FIXME",
    "HACK",
    "NOTE",
    "BLOCK1",
    "BLOCK2",
    "BLOCK3",
    "BLOCK4",
    "BLOCK5"
  ],

  // 3) How to display tags in the tree
  "todo-tree.general.showInExplorer": false,
  "todo-tree.general.showTagsFromOpenFilesOnly": false,

  // Group by TAG so you can get Block-based grouping
  "todo-tree.tree.grouped": true,
  "todo-tree.tree.groupBy": "tag",

  // 4) Optional: tweak badges / icons
  "todo-tree.general.statusBar": "total", // shows total TODOs in status bar
  "todo-tree.general.statusBarClickBehaviour": "reveal",
  "todo-tree.highlights.enabled": true,
  "todo-tree.highlights.defaultHighlight": {
    "foreground": "#ffffff",
    "background": "#007acc",
    "type": "tag"
  },
  "todo-tree.highlights.customHighlight": {
    "BLOCK1": {
      "icon": "shield",
      "rulerColour": "#ff4b4b"
    },
    "BLOCK2": {
      "icon": "pulse",
      "rulerColour": "#ffa500"
    },
    "BLOCK3": {
      "icon": "graph",
      "rulerColour": "#4caf50"
    },
    "BLOCK4": {
      "icon": "flame",
      "rulerColour": "#2196f3"
    },
    "BLOCK5": {
      "icon": "rocket",
      "rulerColour": "#9c27b0"
    }
  }
}
