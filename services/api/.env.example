# Port for API server
PORT=4002

# Firebase project ID (use "demo-fresh" for emulator)
FIREBASE_PROJECT_ID=demo-fresh

# Node environment
NODE_ENV=development

# Firestore emulator connection (comment out to use production Firestore)
FIRESTORE_EMULATOR_HOST=localhost:8080

# Optional: Path to service account key for Firebase Admin SDK
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/serviceAccountKey.json
