rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Per-user objects under their org namespace
    match /organizations/{orgId}/{uid}/{fileName} {
      // User can write to their own path
      allow write: if request.auth != null && request.auth.uid == uid;

      // Read allowed for the user and for managers of that org
      allow read: if request.auth != null && (
        request.auth.uid == uid ||
        (request.auth.token.roles[orgId] in ['manager','admin','org_admin','org_owner'])
      );
    }
  }
}
